{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

{% for article in articles %}
<article>
    <h2>{{article.title}}</h2>
    <div class="metadata">Ecris le {{article.createdAt | date('d/m/Y')}} à {{article.createdAt | date('H:i')}} dans la catégorie polique</div>
    <div class="content">
        <img src="{{article.image}}" alt="">
        {{article.content | raw}}
        <a href="{{path('show_blog',{'id': article.id})}}" class=" btn btn-info">lire la suite</a>
    </div>
</article>
    
{% endfor %}


{% endblock %}